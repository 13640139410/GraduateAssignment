<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_16dp"
    android:paddingRight="@dimen/dimen_16dp"
    android:paddingTop="@dimen/dimen_16dp"
    android:paddingBottom="@dimen/dimen_8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_littleround">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--订单号-->
        <TextView
            android:id="@+id/item_getorder_id"
            android:text="订单号:1421111655489"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <!--订单状态-->
        <TextView
            android:gravity="end"
            android:id="@+id/item_getorder_status"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <!--手机品牌 问题-->
    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:background="@drawable/rectangle_littleround_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_getorder_phoneicon"
            android:src="@drawable/phone_xiaomi"
            android:layout_width="56dp"
            android:layout_height="56dp" />

        <LinearLayout
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_getorder_phonename"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:text="苹果 IPhone XS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_getorder_phoneproblem"
                android:ellipsize="end"
                android:textSize="@dimen/txtsize_small"
                android:maxWidth="200dp"
                android:text="折价换屏;折价换屏;折价换屏;折价换屏;折价换屏;"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <!--共计几项服务-->
    <TextView
        android:id="@+id/item_getorder_problemcount"
        android:textColor="@color/black"
        android:text="共计5项服务"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/item_getorder_get"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_roundframe_gray"
            android:text="接单"
            android:layout_width="wrap_content"
            android:layout_height="32dp" />
    </RelativeLayout>
</LinearLayout>