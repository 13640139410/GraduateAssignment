<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/dimen_16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:textColor="@color/black"
        android:textSize="@dimen/txtsize_big"
        android:text="确认订单信息"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--手机问题-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="end"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:text="手机问题:"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:background="@drawable/rectangle_littleround_gray"
            android:textColor="@color/black"
            android:text="asdasdasdasd"
            android:id="@+id/window_ordermsg_problem"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--地址-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="end"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:text="地址:"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/window_ordermsg_address"
            android:background="@drawable/rectangle_littleround_gray"
            android:textColor="@color/black"
            android:text="asdasdasdasd"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--电话-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="end"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:text="电话:"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/window_ordermsg_phone"
            android:background="@drawable/rectangle_littleround_gray"
            android:textColor="@color/black"
            android:text="asdasdasdasd"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!--备注-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="end"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:text="备注:"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/window_ordermsg_comment"
            android:background="@drawable/rectangle_littleround_gray"
            android:textColor="@color/black"
            android:text="asdasdasdasd"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:layout_marginTop="@dimen/dimen_8dp"
        android:id="@+id/window_ordermsg_surebtn"
        android:text="确定"
        android:textColor="@color/blue"
        android:background="@drawable/shape_round_blue"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</LinearLayout>