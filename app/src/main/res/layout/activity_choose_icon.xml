<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.graduateassignment.Activity.ChooseIconActivity">

    <LinearLayout
        android:id="@+id/act_chooseicon_imglayout"
        android:layout_marginTop="@dimen/dimen_56dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/act_chooseicon_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/dimen_16dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="更换头像"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:id="@+id/act_chooseicon_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="保存图片"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:id="@+id/act_chooseicon_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="取消"
            android:id="@+id/act_chooseicon_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
